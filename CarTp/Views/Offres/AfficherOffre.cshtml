@model IEnumerable<CarTp.Models.Offre>

@{
    ViewBag.Title = "AfficherOffre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>AfficherOffre</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kilometrage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prix)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client.nom)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kilometrage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.marque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client.nom)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdOffre }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdOffre }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdOffre })
            </td>
        </tr>
    }

</table>